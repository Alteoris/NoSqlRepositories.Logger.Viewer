<views:MvxWpfView x:Class="NoSqlRepositories.Viewer.Client.Wpf.Views.LogDetailView"
                  xmlns:views="clr-namespace:MvvmCross.Wpf.Views;assembly=MvvmCross.Wpf"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:NoSqlRepositories.Viewer.Client.Wpf.Views">

    <StackPanel>
        <TextBlock>
                <Run Text="Message :"></Run>
                <Run Text="{Binding Message}"></Run>
        </TextBlock>
        <TextBlock>
                <Run Text="Long Message : "></Run>
                <Run Text="{Binding LongMessage}"></Run>
        </TextBlock>
        <TextBlock>
                <Run Text="Niveau critique : "></Run>
                <Run Text="{Binding Level}"></Run>
        </TextBlock>
        <TextBlock Text="{Binding ContentLog}">

        </TextBlock>
    </StackPanel>
</views:MvxWpfView>
